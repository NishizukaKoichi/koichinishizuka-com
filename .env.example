# Stripe (required together)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# App (required)
APP_BASE_URL=http://localhost:3000

# Databases (required: per product, isolated)
PLATFORM_DATABASE_URL=
EPOCH_DATABASE_URL=
SIGIL_DATABASE_URL=
PACT_DATABASE_URL=
TALISMAN_DATABASE_URL=
SPELL_DATABASE_URL=

# Optional: admin endpoint guard
ADMIN_EMAIL_ALLOWLIST=
ADMIN_DOMAIN_ALLOWLIST=

# Optional: local dev fallback only
DEFAULT_USER_ID=
DEFAULT_USER_EMAIL=

# Optional: internal service auth for forwarded user headers
INTERNAL_REQUEST_SECRET=

# Optional: trust x-user-id/x-user-email headers in non-production
ALLOW_DEV_HEADER_AUTH=0

# Optional: exec overlay guard
EXEC_USER_ID_ALLOWLIST=
EXEC_EMAIL_ALLOWLIST=
EXEC_DOMAIN_ALLOWLIST=

# Notes:
# - Webhook signature verification is mandatory.
# - Do not store Stripe Price IDs here.
